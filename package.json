{
  "name": "lemonldap-ng.js",
  "private": true,
  "license": "GPL-3.0",
  "homepage": "https://lemonldap-ng.org",
  "maintainers": [
    {
      "name": "Xavier Guimard",
      "email": "yadd@debian.org"
    }
  ],
  "scripts": {
    "clean": "rimraf packages/*/lib",
    "build:0": "npm run build --workspace=packages/types --workspace=packages/constants --workspace=packages/crypto --workspace=packages/jwt --workspace=packages/safelib --workspace=packages/perl-dbi --workspace=packages/conf-file --workspace=packages/conf-ldap --workspace=packages/conf-mongodb --workspace=packages/conf-rest --workspace=packages/logger --workspace=packages/logger-syslog --workspace=packages/session-file --workspace=packages/session-ldap --workspace=packages/session-redis --workspace=packages/session-rest",
    "build:1": "npm run build --workspace=packages/conf-dbi --workspace=packages/session-dbi --workspace=packages/conf-yaml --workspace=packages/message-broker",
    "build:2": "npm run build --workspace=packages/conf-cdbi --workspace=packages/conf-rdbi --workspace=packages/session-mysql --workspace=packages/session-postgres --workspace=packages/session-sqlite --workspace=packages/session-oracle --workspace=packages/message-broker-redis --workspace=packages/message-broker-pg --workspace=packages/message-broker-web --workspace=packages/message-broker-nobroker",
    "build:3": "npm run build --workspace=packages/session --workspace=packages/conf",
    "build": "npm run build:0 && npm run build:1 && npm run build:2 && npm run build:3 && npm run build --workspaces",
    "format:check": "prettier --check .",
    "format:check-diff": "prettier --check $(git diff $(git rev-parse --abbrev-ref --symbolic-full-name @{u}) --name-status|grep -E '^M|A'|cut -f2)",
    "format:fix": "prettier --write .",
    "format:fix-diff": "prettier --write $(git checkout|grep -E '^(M|A)'|cut -f2)",
    "lint": "eslint packages/*/src --ext .ts",
    "lint-fix": "eslint --fix packages/*/src --ext .ts",
    "test": "npm run test --workspaces && echo All test succeeded"
  },
  "llng-compat": "2.0.11",
  "bugs": {
    "url": "https://gitlab.ow2.org/lemonldap-ng/lemonldap-ng/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LemonLDAPNG/lemonldap-ng.js.git"
  },
  "keywords": [
    "Lemonldap::NG",
    "SSO",
    "SAML",
    "OpenID-Connect",
    "SSOaaS"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "packages/*/lib/*.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>.*/node_modules/"
    ]
  },
  "authors": [
    "Xavier Guimard <yadd@debian.org>"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/aes-js": "^3.1.4",
    "@types/express": "^5.0.1",
    "@types/iconv": "^3.0.4",
    "@types/ini": "^4.1.1",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.14.0",
    "@types/node-persist": "^3.1.8",
    "@types/random-bytes": "^1.0.3",
    "@types/sha.js": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "eslint": "^9.24.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "jest-mock-server": "^0.1.0",
    "normalize-url": "^8.0.1",
    "prettier": "^3.5.3",
    "redis-mock": "^0.56.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.39.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  }
}
